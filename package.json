{
    "name": "fbasic-emu",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "engines": {
        "node": ">=24.13.0"
    },
    "scripts": {
        "dev": "tsx scripts/build-service-worker.ts && vite",
        "build": "tsx scripts/build-service-worker.ts && vue-tsc && vite build",
        "preview": "vite preview",
        "lint": "eslint . --fix && pnpm lint:style",
        "lint:style": "stylelint \"src/**/*.{css,vue}\"",
        "type-check": "vue-tsc --noEmit",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:run:parallel": "vitest run --pool=forks --poolOptions.forks.maxForks=8",
        "test:run:threads": "vitest run --pool=threads --poolOptions.threads.maxThreads=8",
        "test:run:single": "vitest run --pool=forks --poolOptions.forks.singleFork=true",
        "test:coverage": "vitest run --coverage",
        "build-web-worker": "tsx scripts/build-service-worker.ts",
        "build-service-worker": "pnpm build-web-worker",
        "test-service-worker": "tsx scripts/test-service-worker.ts",
        "visualize-cst": "tsx scripts/visualize-cst.ts",
        "check-syntax": "tsx scripts/check-syntax.ts"
    },
    "dependencies": {
        "@fontsource/exo-2": "^5.1.0",
        "@fontsource/noto-sans-jp": "^5.1.0",
        "@fontsource/noto-sans-sc": "^5.1.0",
        "@fontsource/noto-sans-tc": "^5.1.0",
        "@fontsource/orbitron": "^5.1.0",
        "@fontsource/rajdhani": "^5.1.0",
        "@fontsource/space-mono": "^5.1.0",
        "@iconify/vue": "^5.0.0",
        "@vueuse/core": "^14.1.0",
        "chevrotain": "^11.1.1",
        "decimal.js": "^10.6.0",
        "konva": "^10.2.0",
        "lodash-es": "^4.17.23",
        "loglevel": "^1.9.2",
        "monaco-editor": "^0.55.1",
        "vue": "^3.5.27",
        "vue-i18n": "^11.2.8",
        "vue-konva": "^3.3.0",
        "vue-router": "^5.0.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@iconify-json/mdi": "^1.2.3",
        "@types/lodash-es": "^4.17.12",
        "@types/node": "^25.1.0",
        "@typescript-eslint/eslint-plugin": "^8.54.0",
        "@typescript-eslint/parser": "^8.54.0",
        "@vitejs/plugin-vue": "^6.0.3",
        "@vitest/ui": "^4.0.18",
        "@vue/eslint-config-prettier": "^10.2.0",
        "@vue/eslint-config-typescript": "^14.6.0",
        "@vue/test-utils": "^2.4.6",
        "@vue/tsconfig": "^0.8.1",
        "esbuild": "^0.27.2",
        "eslint": "^9.39.2",
        "eslint-plugin-no-relative-import-paths": "^1.6.1",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-vue": "^10.7.0",
        "globals": "^17.2.0",
        "jiti": "^2.6.1",
        "jsdom": "^27.4.0",
        "postcss-html": "^1.8.1",
        "prettier": "^3.8.1",
        "stylelint": "^17.1.0",
        "stylelint-config-standard": "^40.0.0",
        "stylelint-config-standard-vue": "^1.0.0",
        "stylelint-value-no-unknown-custom-properties": "^6.1.1",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "vite": "^7.3.1",
        "vitest": "^4.0.18",
        "vue-eslint-parser": "^10.2.0",
        "vue-tsc": "^3.2.4"
    }
}