{
    "name": "fbasic-emu",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "npm run build-web-worker && vite",
        "build": "npm run build-web-worker && vue-tsc && vite build",
        "preview": "vite preview",
        "lint": "eslint . --fix && pnpm lint:style",
        "lint:style": "stylelint \"src/**/*.{css,vue}\"",
        "type-check": "vue-tsc --noEmit",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:run:parallel": "vitest run --pool=forks --poolOptions.forks.maxForks=8",
        "test:run:threads": "vitest run --pool=threads --poolOptions.threads.maxThreads=8",
        "test:run:single": "vitest run --pool=forks --poolOptions.forks.singleFork=true",
        "test:coverage": "vitest run --coverage",
        "build-web-worker": "tsx scripts/build-service-worker.ts",
        "build-service-worker": "pnpm build-web-worker",
        "test-service-worker": "tsx scripts/test-service-worker.ts",
        "visualize-cst": "tsx scripts/visualize-cst.ts"
    },
    "dependencies": {
        "loglevel": "^1.9.2",
        "@iconify/vue": "^5.0.0",
        "@vueuse/core": "^14.1.0",
        "chevrotain": "^11.0.3",
        "decimal.js": "^10.6.0",
        "konva": "^10.2.0",
        "lodash-es": "^4.17.21",
        "monaco-editor": "^0.55.1",
        "peggy": "^3.0.2",
        "vue": "^3.5.22",
        "vue-i18n": "^11.2.8",
        "vue-konva": "^3.3.0",
        "vue-router": "^4.6.3"
    },
    "devDependencies": {
        "@eslint/js": "^9.37.0",
        "@types/lodash-es": "^4.17.12",
        "@types/node": "^24.7.1",
        "@typescript-eslint/eslint-plugin": "^8.46.0",
        "@typescript-eslint/parser": "^8.46.0",
        "@vitejs/plugin-vue": "^6.0.1",
        "@vitest/ui": "^3.2.4",
        "@vue/eslint-config-prettier": "^10.2.0",
        "@vue/eslint-config-typescript": "^14.6.0",
        "@vue/test-utils": "^2.4.6",
        "@vue/tsconfig": "^0.8.1",
        "esbuild": "^0.25.10",
        "eslint": "^9.37.0",
        "eslint-plugin-no-relative-import-paths": "^1.6.1",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-vue": "^10.5.0",
        "globals": "^16.5.0",
        "jiti": "^2.6.1",
        "jsdom": "^27.0.0",
        "postcss-html": "^1.8.1",
        "prettier": "^3.6.2",
        "stylelint": "^17.0.0",
        "stylelint-config-standard": "^40.0.0",
        "stylelint-config-standard-vue": "^1.0.0",
        "stylelint-value-no-unknown-custom-properties": "^6.1.0",
        "tsx": "^4.19.2",
        "typescript": "^5.9.3",
        "vite": "^7.1.7",
        "vitest": "^3.2.4",
        "vue-eslint-parser": "^10.2.0",
        "vue-tsc": "^3.1.1"
    }
}